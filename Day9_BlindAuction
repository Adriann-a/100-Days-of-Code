bids_log = {}

def new_user():
    user_name = input("What is you name?: ")
    user_bid = int(input("What is your bid?: $"))
# adding user_name and user_bid to the bids_log dictionary
    bids_log[user_name] = user_bid
    more_users = input("Are there any other bidders? Type 'yes' or 'no': ")
    if more_users == "yes":
        print("\n" * 20)
        new_user()
    else:
        max_bid = max(bids_log.values())
        winner = max(bids_log, key=bids_log.get)
        print(f"The winner is {winner} with a bid of ${max_bid}!")


print("Welcome to Blind Auction!")
new_user()

