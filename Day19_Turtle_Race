from turtle import Turtle, Screen, clearscreen
import random

is_race_on = False # setting to False till user bets so the race doesn't start before
screen = Screen()

# making screen open on the left and adjusting its width and height
canvas = screen.getcanvas()
tk = canvas.winfo_toplevel()
tk.geometry("500x400+50+100")

#adding pop up window
user_bet = screen.textinput(title="Make your bet!", prompt="Which turtle will win the race? Enter a color: ")
print(user_bet)

# list of turtle colors
colors = ["red", "orange", "yellow", "green", "blue", "purple"]

# list of y positions turtles will start from
y_positions = [-100, -60, -20, 20, 60, 100]
all_turtles = []

# creating 6 turtles and setting them up on the start line
for turtle_id in range(0,6):
    new_turtle = Turtle(shape="turtle")
    new_turtle.color(colors[turtle_id])
    new_turtle.penup()
    new_turtle.goto(x=-240, y=y_positions[turtle_id])
    all_turtles.append(new_turtle)


if user_bet: #exists
    is_race_on = True

while is_race_on:
    for turtle in all_turtles:
        if turtle.xcor() > 230:
            is_race_on = False
            winning_color = turtle.pencolor()
            if winning_color == user_bet:
                print(f"You won! 🏆 The {winning_color} turtle is the winner!")
            else:
                print(f"You lost! 😭 The {winning_color} turtle is the winner!")
        random_distance = random.randint(0,10)
        turtle.forward(random_distance)


screen.exitonclick()
